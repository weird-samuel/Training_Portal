<%- include('partials/header') %>
    <main class="mt-3" style="min-height: 33.7vh;">
        <div class="container">
            <h2>Admins
                <a href="/admin/add-admin" class="float-end btn btn-sm btn-primary">Add admin</a>
            </h2>
            <hr>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const admin of admins) { %>
                        <tr>
                            <td><%- admin.name %></td>
                            <td><%- admin.email %></td>
                            <td>
                                <a class="btn btn-danger btn-sm" href="/admin/admin/delete/<%- admin.id %>">Delete</a>                               
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </main>
    <%- include('partials/footer') %>