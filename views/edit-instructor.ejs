<%- include('partials/header.ejs') %>
    <main class="mt-3" style="min-height: 33.7vh;">
        <div class="container">
            <h2>Edit instructor</h2>
            <hr>
            <form class="row" action="" method="post">
                <div class="mb-3 col-sm-6">
                    <label for="surname" class="form-label">Surname</label>
                    <input type="text" class="form-control" id="surname" value="<%- instructor.surname %>" name="surname"
                        required>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="first_name" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="first_name" value="<%- instructor.first_name %>"
                        name="first_name" required>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="other_name" class="form-label">Other Name</label>
                    <input type="text" class="form-control" id="other_name" value="<%- instructor.other_name %>"
                        name="other_name">
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" class="form-control" id="dob" value="<%- instructor.form_dob %>" name="dob"
                        required>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="employment_date" class="form-label">Employment Date</label>
                    <input type="date" class="form-control" id="employment_date" value="<%- instructor.form_employment_date %>" name="employment_date"
                        required>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="gender" class="form-label">Gender</label>
                    <select class="form-select" id="gender" name="gender" required>
                        <option value="" selected disabled>Select gender</option>
                        <option value="male" <%=instructor.gender=='Male' ? 'selected' : '' %>>Male</option>
                        <option value="female" <%=instructor.gender=='Female' ? 'selected' : '' %>>Female</option>
                    </select>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="address" class="form-label">Address</label>
                    <textarea class="form-control" id="address" name="address"
                        rows="3"><%- instructor.address %></textarea>
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" value="<%- instructor.email %>" name="email">
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="address" class="form-label">Photo</label>
                    <input type="file" name="photo" class="form-control" value="<%- instructor.photo %>" id="photo" accept="image/*">
                </div>
                <div class="mb-3 col-sm-6">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" id="phone" value="<%- instructor.phone %>" name="phone">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </main>

    <%- include('partials/footer') %>